<div class="container profile">
  <div class="form_wrapper">
    <div class="profile_user">
      <div class="profile_user_image">
        <%= image_tag current_user.avatar_image %>
      </div>
      <div>
        <div class="profile_user_name">
          <div class="name">
            <%= @profile&.nickname %>
          </div>
          <div class="profile_user_edit_btn">
            <%= link_to '変更', edit_profile_path %>
          </div>
        </div>
        <div class="profile_user_id">
          ID
          <%= @profile&.my_id %>
        </div>
      </div>
    </div>
    <div class="search_user">
      <%= search_form_for @q, url: search_profile_path do |f| %>
        <%= f.number_field :my_id_eq %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
    <div class="share_list">
      <%= "共有しているユーザー#{@user.count}人" %>
      <% @user.each do |user| %>
        <%= link_to account_path(user) do %>
          <div class="profile_user">
            <div class="profile_user_image">
              <%= image_tag user.avatar_image %>
            </div>
            <div class="profile_user_basicInfo">
              <div class="profile_user_name">
                <div class="name">
                  <%= user.profile.nickname %>
                </div>
              </div>
              <div class="profile_user_id">
                ID
                <%= user.profile.my_id %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
